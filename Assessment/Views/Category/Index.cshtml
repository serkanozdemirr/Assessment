@model List<Assessment.Core.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category List</h1>

<br />
<table class="table table-dark table-striped table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    @foreach (var x in Model)
    {
            <tr>
                <td>@x.Id</td>
                <td>@x.Name</td>
                <td>@x.Description</td>
            </tr>
    }
</table>
